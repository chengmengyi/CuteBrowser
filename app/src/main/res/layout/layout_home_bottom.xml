<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/iv_vpn"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:background="@drawable/home_vpn_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_func">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_vpn_logo"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:src="@drawable/fast"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_vpn_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Smart Server"
            android:textColor="#000000"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/right"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <include layout="@layout/layout_vpn_home_ad"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>