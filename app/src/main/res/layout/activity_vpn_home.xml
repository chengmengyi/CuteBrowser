<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_1f1f1f">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_idle"
        android:layout_width="178dp"
        android:layout_height="240dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/vpn_idle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_back"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view"
        android:layout_width="178dp"
        android:layout_height="240dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="gone"
        app:lottie_fileName="connect.zip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_connect_idle"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_btn"
        android:layout_width="195dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/connect_btn_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_connect_idle"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_connect_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#121834"
        app:layout_constraintTop_toTopOf="@id/iv_connect_btn"
        app:layout_constraintLeft_toLeftOf="@id/iv_connect_btn"
        app:layout_constraintRight_toRightOf="@id/iv_connect_btn"
        app:layout_constraintBottom_toBottomOf="@id/iv_connect_btn" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_choose_vpn"
        android:layout_width="190dp"
        android:layout_height="52dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_vpn_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_connect_btn">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_vpn_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/fast"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_vpn_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:text="Super Fast Server"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/right2"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <include android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        layout="@layout/layout_vpn_home_ad"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>