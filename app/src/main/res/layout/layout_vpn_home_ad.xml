<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp">
    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/ad_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:background="@drawable/bg_f8f8f8_11dp">
            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/ad_media"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ad_title"
                app:layout_constraintBottom_toTopOf="@id/ad_btn"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AD"
                android:textSize="14sp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_ad_tag"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/ad_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:round="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/ad_title"
                app:layout_constraintRight_toRightOf="@id/ad_title"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ad_title"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="High School Escape 2"
                android:textSize="14sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#333333"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ad_logo"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ad_desc"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="High School Escape 2"
                android:maxLines="2"
                android:textSize="12sp"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="#797979"
                android:layout_marginTop="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ad_title"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ad_btn"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/bg_install"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ad_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ad_cover2"
        android:scaleType="fitXY"/>
</RelativeLayout>